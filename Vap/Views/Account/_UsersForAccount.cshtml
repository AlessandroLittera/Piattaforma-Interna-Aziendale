@using Models
@using Models.Resources

@model ListUsersForAccount 

@using (Html.BeginForm("SaveAssignement", "Account", FormMethod.Post, new { id = "formUser" }))
{

    @Html.Hidden("accountId", Model.account.Id);


    <div class="box-body">
        <table id="table1" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>@Resource.Name</th>
                    <th>@Resource.Surname</th>
                    <th>@Resource.Add</th>
                </tr>
            </thead>
            <tbody>


                @foreach (var person in Model.Users)
                {
                    <tr>
                        <td>@Html.DisplayFor(item => person.Name)</td>
                        <td>@Html.DisplayFor(item => person.Surname)</td>
                        <td>
                            <input type="checkbox" class="ads_Checkbox" id="usersId" name="usersId" value="@person.Id" />
                        </td>
                    </tr>
                }

            </tbody>
            <tfoot>
                <tr>
                    <th>@Resource.Name</th>
                    <th>@Resource.Surname</th>
                    <th>@Resource.Add</th>
                </tr>
            </tfoot>
        </table>
    </div>
}

<script>
  $(function () {
     var myTable = $('table').DataTable();
  })
    
</script>