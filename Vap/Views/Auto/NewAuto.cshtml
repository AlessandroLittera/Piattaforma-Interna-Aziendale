@model CreateAuto
@{
    ViewData["Title"] = "NewAuto";
}

<section class="content-header">
    <h1>
        Richieste
        <small>Preview</small>
    </h1>
    <ol class="breadcrumb">
        <li><i class="fa fa-dashboard"></i> @Html.ActionLink("Home", "Index", "Home")</li>
        <li class="active">New Account</li>
    </ol>
</section>
<section class="content">
    <div class="row">
        <div class="col-md-6">
            <div class="box box-info">
                <div class="box-header with-border">
                    <h3 class="box-title">Prenota Auto</h3>
                    <div class="box-header with-border pull-right">
                        <a href="@Url.Action("ListAuto", "Auto")" title="List View">Lista auto prenotate </a>
                    </div>
                </div>
                <!-- /.box-header -->
                <!-- form start -->
                <div class="box-body">
                    @using (Html.BeginForm("NewAutoView", "Auto", FormMethod.Post, new { @class = "form-horizontal" }))
                    {
                        <div class="form-group">
                            <label class="col-sm-2 control-label"><span class="input-group-text" id="inputGroup-sizing-default">Auto: </span></label>
                            <div class="col-sm-10">
                                @Html.DropDownListFor(x => x.AutoType, Html.GetEnumSelectList(typeof(CreateAuto.AutoTypes)), new { @class = "chosen", @style = "width: 255px;" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label"><span class="input-group-text" id="inputGroup-sizing-default">Destinazione: </span></label>
                            <div class="col-sm-10">
                                @Html.TextBoxFor(x => x.Note, new { @class = "form-control", @placeholder = "Inserire Causale" })
                                <span asp-validation-for="Note" class="text-danger" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-2 control-label"><span class="input-group-text" id="inputGroup-sizing-default">From: </span></label>
                            <div class="col-sm-10">
                                @Html.TextBoxFor(x => x.From, new { @type = "date", min= DateTime.Today.Date })
                                <span asp-validation-for="From" class="text-danger" />
                            </div>
                            
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label"><span class="input-group-text" id="inputGroup-sizing-default">To: </span></label>
                            <div class="col-sm-10">
                                @Html.TextBoxFor(x => x.To, new { @type = "date" })
                                <span asp-validation-for="To" class="text-danger" />
                            </div>
                        </div>



                        @Html.HiddenFor(x => x.Id)
                        <div class="box-footer">
                            <button type="submit" class="btn btn-default pull-right">
                                Aggiungi
                            </button>
                        </div>
                    }
                </div>
                <!-- /.box-footer -->
            </div>
        </div>
    </div>

</section>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}





