@model IEnumerable<Models.User>
@using Models.Resources
@{
    ViewData["Title"] = "ListUser";
}
<div>
    <section class="content-header">
        <h1>
            @Resource.ListAllUser @ViewBag.Id
            <small>Preview</small>
        </h1>
        <ol class="breadcrumb">
            <li><i class="fa fa-dashboard"></i>@Html.ActionLink("Home", "Index", "Home")</li>
            <li class="active">List Users @ViewBag.Id</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">

                <div class="box">
                    <div class="box-header">
                        <h4>
                            Data Table With All Utents
                            <div class="right pull-right">
                                <button class="btn btn-primary" type="button">@Html.ActionLink(Resource.NewUser, "NewUser", "User")</button>
                            </div>
                        </h4>

                    </div>

                    <!-- /.box-header -->
                    <div class="box-body">
                        <table id="table" class="table table-bordered table-striped" data-delete-url="/User/DeleteConfirm">
                            <thead>
                                <tr>
                                    <th>@Resource.Name</th>
                                    <th>@Resource.Surname</th>
                                    <th>@Resource.Edit</th>
                                    <th>@Resource.Delete</th>

                                </tr>
                            </thead>
                            <tbody>
                                @using (Html.BeginForm("ListUsers", "Account", FormMethod.Get))
                                {
                                    foreach (var person in Model)
                                    {
                                        <tr>
                                            <td>@Html.DisplayFor(item => person.Name)</td>
                                            <td>@Html.DisplayFor(item => person.Surname)</td>
                                            <td>
                                                <a class="btn" href='@Url.Action("Edit", "User", new { id = person.Id,})'>
                                                    <img src="~/images/edit1.png" width="25" height="25" />
                                                </a>
                                            </td>
                                            <td>
                                                <a data-id="@person.Id" class="btn btn-delete"><img id="img.icon-delete" src="~/images/delete1.jpg" width="25" height="25" /></a>
                                            </td>
                                            <!--</td>-->
                                        </tr>
                                    }
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>@Resource.Name</th>
                                    <th>@Resource.Surname</th>
                                    <th>@Resource.Edit</th>
                                    <th>@Resource.Delete</th>
                                </tr>
                            </tfoot>

                        </table>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>

            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>
<!-- ./wrapper -->
